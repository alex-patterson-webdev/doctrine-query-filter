{
  "name": "alex-patterson-webdev/doctrine-query-filter",
  "description": "Query filtering components for Doctrine ORM",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4 || >=8.0",
    "doctrine/orm": "^2.8",
    "alex-patterson-webdev/date-time": "dev-feature/3.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan": ">=0.12",
    "friendsofphp/php-cs-fixer": "^2.18"
  },
  "autoload": {
    "psr-4": {
      "Arp\\DoctrineQueryFilter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\DoctrineQueryFilter\\": "test/unit/"
    }
  },
  "scripts": {
    "test": [
      "@test:phpcs",
      "@test:phpcs-fix",
      "@test:phpstan",
      "@test:phpunit"
    ],
    "test:phpcs": "php vendor/bin/phpcs --standard=phpcs.xml --colors src/",
    "test:phpcs-fixer": "php vendor/bin/php-cs-fixer fix src --diff-format=udiff --dry-run --show-progress=dots --using-cache=no --verbose",
    "test:phpstan": "php vendor/bin/phpstan analyse src --level=5",
    "test:phpstan-dev": "php vendor/bin/phpstan analyse src --level=8",
    "test:phpunit": [
      "@putenv XDEBUG_MODE=coverage",
      "php vendor/bin/phpunit --coverage-clover=test/coverage/clover.xml"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
